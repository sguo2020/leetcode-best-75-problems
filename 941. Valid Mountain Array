class Solution:
    def validMountainArray(self, arr) -> bool:
        left = 0
        right =len(arr)-1
        if len(arr)<3:
            return False
        else:
            while arr[left]< arr[left+1]:
                left +=1
            while arr[right]< arr[right-1]:
                right -=1

            if left == 0 or right == len(arr)-1 or left != right:
                return False
            else: return True


arr = [0,2,5,2,4,1]
s = Solution()
print(s.validMountainArray(arr))
