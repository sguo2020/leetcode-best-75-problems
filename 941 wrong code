arr = [0,2,5,4,1]
 
left = 0 





if len(arr) < 3: print('False', 'e')



while left < len(arr) and arr[left] < arr[left + 1]:
    left += 1
    
if left == 0 or left == len(arr) - 1:
    print('False', 'e')

while left < len(arr) and arr[left] > arr[left + 1]:
    left += 1
    

print((left == len(arr)-1), 'e')
